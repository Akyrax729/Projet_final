<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Rememono{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/rememono-logo.png') }}" type="image/x-icon">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
     {% block header %}
            <header>
                <nav>
                    <ul>
                        <li><a id="logo" href="{{path('app_index')}}"><img src="{{ asset('img/rememono-logo.png') }}" alt="Logo">Rememono</a></li>
                        {% if app.user %}
                            <li><a href="{{path('app_note')}}">Vos Notes</a></li>
                            <li><a href="{{path('app_addnote')}}">Ajouter une note</a></li>
                            <li><a href="{{path('app_logout')}}">DÃ©connexion</a></li>  
                        {% else %}
                            <li><a href="{{path('app_login')}}">Connexion</a></li>
                            <li><a href="{{path('app_register')}}">S'enregistrer</a></li>
                        {% endif %}
                        <button type="button" data-theme-toggle aria-label="Light Theme">Light theme</button>
                        
                    </ul>
                </nav>
            </header>
        {% endblock %} 

        {% block body %}

        {% endblock %}

        {% block footer %}
            <footer>
                <div>
                    <a id="logo" href="{{path('app_index')}}"><img src="{{ asset('img/rememono-logo.png') }}" alt="Logo">Rememono</a>
                </div>
                <div class="contact">
                    <a href="#intro">A propos de nous</a>
                    <p>benpro@jld-i.com</p>
                </div>
                <div class="legal">
                    <p>&copy; 2025 B.Martinez</p>
                    <p>Powered by Symfony 6.4</p>
                </div>
            </footer>
        {% endblock %}
    
    </body>
</html>
