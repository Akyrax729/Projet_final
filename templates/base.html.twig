<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Rememono{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
     {% block header %}
            <header>
                <nav>
                    <ul>
                        <li><a id="logo" href="{{path('app_index')}}">Rememono</a></li>
                        <li><a href="{{path('app_addnote')}}">Ajouter une note</a></li>
                        {% if app.user %}
                            <li><a href="{{path('app_logout')}}">Déconnexion</a></li>  
                        {% else %}
                            <li><a href="{{path('app_login')}}">Connexion</a></li>
                            <li><a href="{{path('app_register')}}">S'enregistrer</a></li>
                        {% endif %}
                        <button type="button" data-theme-toggle aria-label="Light Theme">Light theme</button>
                        
                    </ul>
                </nav>
            </header>
        {% endblock %} 

        {% block body %}

        {% endblock %}

        {% block footer %}
            <footer>
                <p>&copy; 2025 B.Martinez</p>
                <p>Powered by Symfony 6.4</p>
                <p>benpro@jld-i.com</p>
            </footer>
        {% endblock %}
    
    </body>
</html>
