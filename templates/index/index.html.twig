{% extends 'base.html.twig' %}





{% block title %}Accueil{% endblock %}

{% block body %}
    <section id="note">
        {% if app.user %}
            <h2>Bonjour {{ app.user.alias }}</h2>
            <div id="notebloc">
            {% for note in notes %}
                    <div class="notebody {{ note.color.label }} ">

                        <div>
                            <h3>{{ note.titre }}</h3>
                            <p>{{ note.content }}</p>
                            {% if note.datedebut != null %}
                                <p>Date de d√©but {{ note.datedebut|date('d/m/Y') }}</p>
                            {% endif %}
                        </div>
                
                        <div class="tags">
                            {% for tag in note.tag %}
                                    <div>
                                        <span class="tag">{{ tag.label }}<span class="triangle"></span></span>
                                    </div>
                            {% endfor %}
                        </div>
                        <ul class="action">
                            <li><a href="{{ path('app_note_edit', {'id': note.id}) }}"><i class="fa-solid fa-pen"></i> <span class="modifier">Test</span></a></li>
                            <li><a href="{{ path('app_note_read', {'id': note.id})}}"><i class="fa-solid fa-magnifying-glass"></i> <span class="plus"></span> </a></li>
                            <li> {{ include('note/deleteform.html.twig') }}</li>
                        </ul>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </section>
{% endblock %}
